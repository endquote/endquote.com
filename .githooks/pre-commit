#!/bin/bash

# Define the directories
SOURCE_DIR="data/prisma"
TARGET_DIR="front/prisma"

# Sync the directories (modify options as needed)
rsync -av --delete "$SOURCE_DIR/" "$TARGET_DIR/"

# Check if there are any changes after sync
if git diff --quiet; then
  echo "Directories are in sync. Proceeding with commit."
else
  echo "Directories were out of sync and have been updated. Please stage changes before committing."
  exit 1
fi
