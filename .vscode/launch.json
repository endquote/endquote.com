{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "client: chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: nuxt",
      "outputCapture": "std",
      "program": "${workspaceFolder}/front/node_modules/nuxi/bin/nuxi.mjs",
      "args": [
        "dev"
      ],
    },
    {
      "request": "launch",
      "name": "file",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}/back",
      "runtimeExecutable": "tsx",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/back/node_modules/**"
      ],
    },
  ],
  "compounds": [
    {
      "name": "fullstack: nuxt",
      "configurations": [
        "server: nuxt",
        "client: chrome"
      ]
    }
  ]
}

